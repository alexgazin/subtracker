<% const supportBody = `
<div style="max-width: 600px; margin: 0 auto;">
    <div class="card">
        <h2>Служба поддержки</h2>
        <p style="color: var(--text-muted); margin-bottom: 1.5rem;">Есть вопросы или предложения? Напишите нам!</p>
        
        <form action="/support" method="POST">
            <div class="form-group">
                <label>Ваш Email</label>
                <input type="email" name="email" required placeholder="example@mail.com">
            </div>
            <div class="form-group">
                <label>Сообщение</label>
                <textarea name="message" required rows="5" placeholder="Опишите вашу проблему..."></textarea>
            </div>
            <button type="submit" class="btn btn-primary" style="width: 100%;">Отправить</button>
        </form>
        
        <div style="margin-top: 2rem; padding-top: 1rem; border-top: 1px solid var(--border-color); text-align: center;">
            <p>Или напишите нам напрямую: <a href="mailto:support@subtracker.mvp">support@subtracker.mvp</a></p>
        </div>
    </div>
</div>
`; %>
<%- include('../layout', { body: supportBody }) %>
